<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ renderData.title or title or metadata.title }}</title>
  <meta name="og:title" content="{{ renderData.title or title or metadata.title }}">

  <meta name="description" content="{{ renderData.description or description or metadata.description }}">
  <meta name="og:description" content="{{ renderData.description or description or metadata.description }}">
  <link rel="stylesheet" href="{{ '/css/reset.css' | url }}">
  <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="shortcut icon" href="{{ metadata.favicon }}" type="image/x-icon">
  <link rel="icon" href="{{ metadata.favicon }}" type="image/x-icon">
  <meta name="twitter:image" content="{{metadata.social_image}}">
  <meta name="twitter:card" content="summary">
  <meta name="og:image:width" content="{{metadata.social_image_width}}">
  <meta name="og:image:height" content="{{metadata.social_image_height}}">
  <meta name="og:image" content="{{metadata.social_image}}">
  <meta name="twitter:image:alt" content="Full stuck developer">
</head>

<body>
  <header>
    <a href="/" class="logo-wrapper">
      <div class="logo">
        {{ metadata.heading }}
      </div>
    </a>
    <nav>
    <ol class="nav">
      <li>
        -> <a href="/archives">Writing</a>
      </li>
      <li>
        -> <a href="/explore">Explore</a>
      </li>
    </ol>
    </nav>
  </header>
  <main>
    {{ content | safe }}
  </main>
</body>

</html>
